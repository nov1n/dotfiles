{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "teamcity-buildconfig-searcher",
  "title": "TeamCity Project Searcher",
  "description": "Fuzzy search all projects in TeamCity",
  "icon": "extension-icon.png",
  "author": "your_name",
  "categories": [
    "Developer Tools"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "search-buildconfigs",
      "title": "Search Projects",
      "description": "Fuzzy search through all TeamCity projects",
      "mode": "view"
    },
    {
      "name": "refresh-buildconfigs",
      "title": "Refresh Project List",
      "description": "Fetch latest projects from TeamCity",
      "mode": "no-view"
    }
  ],
  "preferences": [
    {
      "name": "teamcityToken",
      "type": "password",
      "required": true,
      "title": "TeamCity Token",
      "description": "TeamCity personal access token"
    },
    {
      "name": "teamcityUrl",
      "type": "textfield",
      "required": true,
      "title": "TeamCity URL",
      "description": "TeamCity server URL (e.g., https://teampicnic.teamcity.com)",
      "default": "https://teampicnic.teamcity.com"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.65.0",
    "@raycast/utils": "^1.12.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.6",
    "@types/node": "20.8.10",
    "@types/react": "^19.0.10",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
