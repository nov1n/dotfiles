{
  "$schema": "https://opencode.ai/config.json",
  "theme": "tokyonight",
  "model": "anthropic/claude-sonnet-4-5",
  "autoupdate": true,
  "permission": {
    "bash": {
      "*": "ask",
      "bd *": "allow",
      "cat *": "allow",
      "cd *": "allow",
      "du *": "allow",
      "chmod *": "allow",
      "find *": "allow",
      "git diff *": "allow",
      "git log *": "allow",
      "git push *": "deny",
      "git show  *": "allow",
      "git status *": "allow",
      "grep *": "allow",
      "head *": "allow",
      "helmfile apply": "deny",
      "helmfile template": "allow",
      "kubectl apply *": "deny",
      "kubectl patch *": "deny",
      "ls *": "allow",
      "mkdir *": "allow",
      "mv *": "allow",
      "nvim *": "allow",
      "pwd": "allow",
      "rg *": "allow",
      "wc *": "allow",
      "which *": "allow",
    }
  }
}
